<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:id="@+id/station_row"
	
	android:paddingLeft="0px">
	<ImageView android:id="@+id/file_icon"
		android:adjustViewBounds="false"
		android:layout_height="44px"
		android:layout_width="44px"
		android:layout_gravity="center_vertical|left"
		android:scaleType="centerCrop"
		android:src="@+drawable/ic_launcher_folder_small"/>
	<LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:orientation="vertical"
		android:layout_gravity="center_vertical"
		android:layout_weight="1"
		android:layout_marginLeft="12px">
		<TextView android:id="@+id/file_name" android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="Black Eyed Peas"
				android:layout_weight="1"
				android:layout_gravity="center"
				android:gravity="left|center_vertical"
				android:textSize="7pt"
				android:textStyle="bold"
				android:textColor="#fff"/>
		<TextView android:id="@+id/file_details"
				android:layout_width="fill_parent"
				
				android:layout_height="wrap_content"
				android:text="500 Bytes"
				android:layout_weight="1"
				android:layout_gravity="center"
				android:gravity="left|center_vertical"
				android:textSize="5pt"
				android:textColor="#ccc"/>
		</LinearLayout>
	</LinearLayout>
