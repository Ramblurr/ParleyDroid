<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="" android:id="@+id/status" />
	<Button android:id="@+id/start_practice" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Start Practice" />
	<ViewFlipper android:id="@+id/ViewFlipper"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<ListView android:id="@+id/lessons_list_view"
			android:divider="#d9d7d7" android:layout_width="fill_parent"
			android:layout_height="fill_parent" />
		<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			android:scrollbars="vertical" android:layout_height="fill_parent"
			android:layout_width="fill_parent">
			<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/words_table" android:layout_width="wrap_content"
				android:layout_height="fill_parent" android:scrollbars="vertical">

			</TableLayout>
		</ScrollView>
	</ViewFlipper>
</LinearLayout>
